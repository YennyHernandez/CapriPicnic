<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!--Drawer and bottom navigation fragments-->
    <fragment
        android:id="@+id/myQuotesFragment"
        android:name="com.yennyh.capripicnic.ui.fragments.MyQuotesFragment"
        android:label="@string/my_quotes" />
    <fragment
        android:id="@+id/myReservationsFragment"
        android:name="com.yennyh.capripicnic.ui.fragments.MyReservationsFragment"
        android:label="@string/my_reservations" />
    <fragment
        android:id="@+id/myAccountFragment"
        android:name="com.yennyh.capripicnic.ui.fragments.MyAccountFragment"
        android:label="@string/my_account" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.yennyh.capripicnic.ui.fragments.HomeFragment"
        android:label="@string/home" />

    <fragment
        android:id="@+id/reservationsFragment"
        android:name="com.yennyh.capripicnic.ui.fragments.ReservationsFragment"
        android:label="@string/reservations"
        tools:layout="@layout/fragment_reservations">
        <action
            android:id="@+id/action_reservationsFragment_to_detailsProductViewFragment"
            app:destination="@id/PicnicViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/PicnicViewFragment"
        android:name="com.yennyh.capripicnic.shared.details_recyclerview.PicnicViewDetailsFragment"
        android:label="@string/reservations"
        tools:layout="@layout/fragment_picnic_view_details">
        <argument
            android:name="picnicSelect"
            app:argType="com.yennyh.capripicnic.models.PicnicView" />
    </fragment>
    <fragment
        android:id="@+id/productsFragment"
        android:name="com.yennyh.capripicnic.ui.fragments.ProductsFragment"
        android:label="@string/products"
        tools:layout="@layout/fragment_products">
        <action
            android:id="@+id/action_productsFragment_to_productViewDetailsFragment"
            app:destination="@id/productViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/productViewFragment"
        android:name="com.yennyh.capripicnic.shared.details_recyclerview.ProductViewDetailsFragment"
        android:label="@string/products"
        tools:layout="@layout/fragment_product_view_details">
        <argument
            android:name="productSelect"
            app:argType="com.yennyh.capripicnic.models.Product" />
    </fragment>

    <fragment
        android:id="@+id/myPurchaseFragment"
        android:name="com.yennyh.capripicnic.ui.fragments.MyPurchasesFragment"
        android:label="@string/my_purchases"
        tools:layout="@layout/fragment_my_purchases">
        <action
            android:id="@+id/action_myPurchaseFragment_to_myPurchaseDetailsFragment"
            app:destination="@id/myPurchaseDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/myPurchaseDetailsFragment"
        android:name="com.yennyh.capripicnic.shared.details_recyclerview.MyPurchaseDetailsFragment"
        android:label="@string/my_purchases"
        tools:layout="@layout/fragment_my_purchase_details">
        <argument
            android:name="myProductSelect"
            app:argType="com.yennyh.capripicnic.models.Product"/>
    </fragment>


    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.yennyh.capripicnic.ui.fragments.MapFragment"
        android:label="@string/maps"
        tools:layout="@layout/fragment_map" />
</navigation>