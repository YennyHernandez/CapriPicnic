<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!--Drawer and bottom navigation fragments-->
    <fragment
        android:id="@+id/myQuotesFragment"
        android:name="com.yennyh.capripicnic.ui.fragments.MyQuotesFragment"
        android:label="@string/my_quotes" />
    <fragment
        android:id="@+id/myPurchaseFragment"
        android:name="com.yennyh.capripicnic.ui.fragments.MyPurchasesFragment"
        android:label="@string/my_purchases" />
    <fragment
        android:id="@+id/myReservationsFragment"
        android:name="com.yennyh.capripicnic.ui.fragments.MyReservationsFragment"
        android:label="@string/my_reservations" />
    <fragment
        android:id="@+id/myAccountFragment"
        android:name="com.yennyh.capripicnic.ui.fragments.MyAccountFragment"
        android:label="@string/my_account" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.yennyh.capripicnic.ui.fragments.HomeFragment"
        android:label="@string/home" />
    <fragment
        android:id="@+id/reservationsFragment"
        android:name="com.yennyh.capripicnic.ui.fragments.ReservationsFragment"
        android:label="@string/reservations"
        tools:layout="@layout/fragment_reservations">
        <action
            android:id="@+id/action_reservationsFragment_to_detalleFragment"
            app:destination="@id/detalleFragment" />
    </fragment>
    <fragment
        android:id="@+id/productsFragment"
        android:name="com.yennyh.capripicnic.ui.fragments.ProductsFragment"
        android:label="@string/products"
        tools:layout="@layout/fragment_products">
        <action
            android:id="@+id/action_productsFragment_to_detalleProductsFragment"
            app:destination="@id/detalleProductsFragment" />
    </fragment>
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.yennyh.capripicnic.ui.fragments.MapFragment"
        android:label="@string/maps"
        tools:layout="@layout/fragment_map" />
    <fragment
        android:id="@+id/detalleFragment"
        android:name="com.yennyh.capripicnic.ui.details_reciclyviews.DetalleFragment"
        android:label="fragment_detalle"
        tools:layout="@layout/fragment_detalle">
        <argument
            android:name="themesSeleccionado"
            app:argType="com.yennyh.capripicnic.models.ThematicsPicnics" />
    </fragment>
    <fragment
        android:id="@+id/detalleProductsFragment"
        android:name="com.yennyh.capripicnic.ui.details_reciclyviews.DetalleProductsFragment"
        android:label="@string/products"
        tools:layout="@layout/fragment_detalle_products">
        <argument
            android:name="productSeleccionado"
            app:argType="com.yennyh.capripicnic.models.TypeProducts" />
    </fragment>

</navigation>